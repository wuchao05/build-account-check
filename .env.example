# 团队 ID，所有接口共享
TEAM_ID=500039

# job + account 接口共用的 token
API_TOKEN=api-token

# /batch/job/list 完整 URL
JOB_LIST_BASE_URL=https://splay-admin.lnkaishi.cn/batch/job/list

# /batch/job/detail 完整 URL
JOB_DETAIL_BASE_URL=https://splay-admin.lnkaishi.cn/batch/job/detail

# /tf/account/list 完整 URL
ACCOUNT_LIST_BASE_URL=https://splay-admin.lnkaishi.cn/tf/account/list

# /tf/account/status 完整 URL
ACCOUNT_STATUS_BASE_URL=https://splay-admin.lnkaishi.cn/tf/account/status

# 每页拉取待执行任务数量
JOB_LIST_PAGE_SIZE=500

# 轮询 job/list 的时间间隔（毫秒）
POLL_INTERVAL_MS=60000

# 账户提前多少分钟检查/启用
CHECK_LEAD_TIME_MINUTES=3

# 账户过滤：create_user_name
ACCOUNT_FILTER_CREATE_USER_NAME=小红

# 账户过滤：company_short_name
ACCOUNT_FILTER_COMPANY_SHORT_NAME=虎雨

# 拉取 job/detail 的并发上限
JOB_DETAIL_MAX_CONCURRENCY=5

# 定时触发时是否再次确认账户仍有 Waiting 任务
ENABLE_ACCOUNT_RECHECK=true

# 日志等级：debug/info/warn/error
LOG_LEVEL=info
